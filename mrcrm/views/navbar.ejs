    <script>
        window.onload = () => {
            let menu = document.getElementById("menu")
            getAjax("/teams/get/list", (response) => {
                JSON.parse(response).teams.forEach(team => {
                    const name = team[0];
                    const href = team[1];
                    let li = document.createElement("li");
                    let a = document.createElement("a");
                    a.href = href;
                    a.innerText = name;
                    li.appendChild(a)
                    menu.appendChild(li)
                });
            })
        }
    </script>
